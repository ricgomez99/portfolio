---
import { Image } from 'astro:assets'

const { title, description, image, link, tech } = Astro.props
---

<div class="bg-white max-w-lg p-3 rounded-3xl grid grid-rows-subgrid row-span-4">
    <Image src={image} alt='project image' class="max-w-full aspect-square object-cover rounded-2xl" />
    <h2 class="text-2xl text-[#94a1b2] font-semibold font-sans">{ title }</h2>
    <p class="text-[#b8c1ec] text-sm font-sans">{ description }</p>
    <a target="_blank" href={link}>link</a>
</div>